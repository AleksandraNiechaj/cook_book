{% extends 'base.html.twig' %}

{% block title %}Zmiana hasła{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>🔑 Zmień hasło</h1>

        {{ form_start(form) }}
        {{ form_row(form.currentPassword) }}
        {{ form_row(form.newPassword.first) }}
        {{ form_row(form.newPassword.second) }}
        <button class="btn btn-primary mt-2">💾 Zmień hasło</button>
        {{ form_end(form) }}

        <p class="mt-3">
            <a href="{{ path('app_admin') }}" class="btn btn-outline-secondary btn-sm">← Panel administratora</a>
        </p>
    </div>
{% endblock %}
