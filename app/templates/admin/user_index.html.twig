                <tr><td colspan="4" class="text-muted">Brak u≈ºytkownik√≥w.</td></tr>
            {% endfor %}
            </tbody>
        </table>

        {% if pages > 1 %}
            <nav>
                <ul class="pagination">
                    {% for p in 1..pages %}
                        <li class="page-item {{ p == page ? 'active' : '' }}">
                            <a class="page-link" href="{{ path('admin_user_index', { page: p, sort: sort, dir: dir }) }}">{{ p }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        {% endif %}

        <p class="mt-3">
            <a href="{{ path('app_admin') }}" class="btn btn-outline-secondary btn-sm">‚Üê Panel administratora</a>
