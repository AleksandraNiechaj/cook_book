{% extends 'base.html.twig' %}
{% block title %}Zmień hasło użytkownika{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>🔑 Zmień hasło: {{ item.email }}</h1>

        {{ form_start(form) }}
        {{ form_row(form.newPassword.first) }}
        {{ form_row(form.newPassword.second) }}
        <button class="btn btn-primary mt-2">💾 Zapisz hasło</button>
        {{ form_end(form) }}

        <p class="mt-3">
            <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary btn-sm">← Lista użytkowników</a>
        </p>
    </div>
{% endblock %}
