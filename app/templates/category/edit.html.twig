{% extends 'base.html.twig' %}
{% block title %}Edytuj kategorię{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Edytuj kategorię</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary mt-2">💾 Zapisz zmiany</button>
        {{ form_end(form) }}

        <form method="post" action="{{ path('category_delete', { id: category.id }) }}" class="mt-3"
              onsubmit="return confirm('Na pewno chcesz usunąć tę kategorię?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
            <button class="btn btn-danger">🗑️ Usuń kategorię</button>
        </form>

        <p class="mt-3">
            <a href="{{ path('category_list') }}">← Wszystkie kategorie</a>
        </p>
    </div>
{% endblock %}
