        <a href="{{ path('app_home') }}" class="btn btn-outline-primary btn-sm">üè† Powr√≥t do strony g≈Ç√≥wnej</a>
    </p>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="mb-0">Kategorie</h1>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-sm btn-success" href="{{ path('category_new') }}">‚ûï Nowa kategoria</a>
            {% endif %}
        </div>

        <ul class="list-group mt-3">
            {% for c in categories %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="{{ path('category_show', { slug: c.slug }) }}">{{ c.name }}</a>

                    {% if is_granted('ROLE_ADMIN') %}
                        <span>
                            <a href="{{ path('category_edit', { id: c.id }) }}" class="btn btn-sm btn-warning">‚úèÔ∏è Edytuj</a>

                            <form method="post" action="{{ path('category_delete', { id: c.id }) }}" style="display:inline"
                                  onsubmit="return confirm('Na pewno chcesz usunƒÖƒá tƒô kategoriƒô?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ c.id) }}">
                                <button class="btn btn-sm btn-danger">üóëÔ∏è Usu≈Ñ</button>
                            </form>
                        </span>
                    {% endif %}
                </li>
            {% else %}
                <li class="list-group-item text-muted">Brak kategorii.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
