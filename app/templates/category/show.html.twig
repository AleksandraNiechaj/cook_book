{% extends 'base.html.twig' %}
{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <p class="mt-3">
        <a href="{{ path('app_home') }}" class="btn btn-outline-primary btn-sm">üè† Powr√≥t do strony g≈Ç√≥wnej</a>
    </p>

    <div class="container mt-4">
        <h1>Kategoria: {{ category.name }}</h1>

        {% if recipes is empty %}
            <p class="text-muted mt-3">Brak przepis√≥w w tej kategorii.</p>
        {% else %}
            <div class="row mt-3">
                {% for r in recipes %}
                    <div class="col-md-6 mb-3">
                        <article class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h3 class="h5">
                                    <a href="{{ path('recipe_show', { id: r.id }) }}">{{ r.title }}</a>
                                </h3>
                                <p class="card-text">
                                    {{ r.content|u.truncate(140, '‚Ä¶', true) }}
                                </p>
                                <a class="btn btn-sm btn-primary" href="{{ path('recipe_show', { id: r.id }) }}">
                                    Zobacz przepis
                                </a>
                            </div>
                        </article>
                    </div>
                {% endfor %}
            </div>

            <div class="pagination mt-4">
                {{ knp_pagination_render(recipes) }}
            </div>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <p class="mt-3">
                <a href="{{ path('category_edit', { id: category.id }) }}" class="btn btn-sm btn-warning">‚úèÔ∏è Edytuj</a>
            </p>

            <form method="post" action="{{ path('category_delete', { id: category.id }) }}" class="mt-2"
                  onsubmit="return confirm('Na pewno chcesz usunƒÖƒá tƒô kategoriƒô?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                <button class="btn btn-sm btn-danger">üóëÔ∏è Usu≈Ñ</button>
            </form>
        {% endif %}

        <p class="mt-3">
            <a href="{{ path('category_list') }}">‚Üê Wszystkie kategorie</a>
        </p>
    </div>
{% endblock %}
