{% extends 'base.html.twig' %}

{% block title %}Strona g≈Ç√≥wna{% endblock %}

{% block body %}

    {# üîπ Sekcja logowania / powitania #}
    {% if not app.user %}
        <div class="container mt-4 mb-4">
            <h2>Zaloguj siƒô</h2>
            <form method="post" action="{{ path('app_login') }}">
                {% if error is defined and error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="mb-3">
                    <label for="inputEmail">Email</label>
                    <input type="email" name="email" id="inputEmail" class="form-control"
                           value="{{ last_username|default('') }}" required autofocus>
                </div>

                <div class="mb-3">
                    <label for="inputPassword">Has≈Ço</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-primary" type="submit">Zaloguj</button>
            </form>
        </div>
    {% else %}
        <div class="container mt-4 mb-4">
            <p>üëã Witaj, {{ app.user.email }}!</p>
            <a href="{{ path('app_logout') }}" class="btn btn-outline-danger btn-sm">Wyloguj</a>
        </div>
    {% endif %}

    <p class="mb-3">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_recipe_new') }}" class="btn btn-success btn-sm">‚ûï Dodaj nowy przepis</a>
        {% endif %}
        <a href="{{ path('app_recipe_index') }}" class="btn btn-outline-secondary btn-sm">
            üìñ Przejd≈∫ do wszystkich przepis√≥w
        </a>
    </p>

    <div class="container mt-4">
        <h1 class="mb-4">Przepisy kulinarne üç≥</h1>

        <p class="mb-3">
            <a href="{{ path('category_list') }}" class="btn btn-outline-secondary btn-sm">
                Przejd≈∫ do wszystkich kategorii
            </a>
        </p>

        <div class="row">
            {# Sidebar z kategoriami #}
            <div class="col-md-3">
                <h4>Kategorie</h4>
                <ul class="list-group">
                    {% for c in categories %}
                        <li class="list-group-item">
                            <a href="{{ path('category_show', { slug: c.slug }) }}">{{ c.name }}</a>
                        </li>
                    {% else %}
                        <li class="list-group-item text-muted">Brak kategorii</li>
                    {% endfor %}
                </ul>
            </div>

            {# Lista przepis√≥w #}
            <div class="col-md-9">
                <div class="row">
                    {% for recipe in recipes %}
                        <div class="col-md-6 mb-3">
                            <div class="card shadow-sm h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">{{ recipe.title }}</h5>
                                    <p class="card-text">{{ recipe.content|u.truncate(160, '‚Ä¶', true) }}</p>
                                    <div class="mt-auto">
                                        <a href="{{ path('recipe_show', { id: recipe.id }) }}" class="btn btn-sm btn-primary">Zobacz przepis</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <p>Brak przepis√≥w do wy≈õwietlenia.</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
