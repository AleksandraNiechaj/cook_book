{% extends 'base.html.twig' %}
{% block title %}Edytuj przepis{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Edytuj przepis</h1>

        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.content) }}
        {{ form_row(form.category) }}

        <button class="btn btn-primary mt-3">Zapisz zmiany</button>
        <a href="{{ path('app_recipe_index') }}" class="btn btn-secondary mt-3">Anuluj</a>
        {{ form_end(form) }}

        {% if is_granted('ROLE_ADMIN') %}
            <form method="post" action="{{ path('app_recipe_delete', { id: recipe.id }) }}" class="mt-3"
                  onsubmit="return confirm('Na pewno chcesz usunąć ten przepis?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
                <button class="btn btn-danger">Usuń przepis</button>
            </form>
        {% endif %}
    </div>
{% endblock %}
