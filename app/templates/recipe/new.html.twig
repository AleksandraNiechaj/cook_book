{% extends 'base.html.twig' %}
{% block title %}Nowy przepis{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Dodaj nowy przepis</h1>

        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.content) }}
        {{ form_row(form.category) }}

        <button class="btn btn-success mt-3">💾 Zapisz</button>
        {{ form_end(form) }}

        <p class="mt-3">
            <a href="{{ path('app_recipe_index') }}">← Wróć do listy przepisów</a>
        </p>
    </div>
{% endblock %}
