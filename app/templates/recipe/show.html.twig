{% extends 'base.html.twig' %}
{% block title %}{{ recipe.title }}{% endblock %}

{% block body %}
    <p class="mt-3">
        <a href="{{ path('app_home') }}" class="nav-link">üè† Powr√≥t do strony g≈Ç√≥wnej</a>
    </p>

    <div class="container mt-4">
        <article class="recipe">
            <h1 class="mb-3">{{ recipe.title }}</h1>

            <p class="text-muted">
                <em>Kategoria:</em>
                {% if recipe.category %}
                    <a href="{{ path('category_show', { slug: recipe.category.slug }) }}">
                        {{ recipe.category.name }}
                    </a>
                {% else %}
                    ‚Äî
                {% endif %}
            </p>

            {% if recipe.tags|length > 0 %}
                <p class="text-muted">
                    <em>Tagi:</em>
                    {% for tag in recipe.tags %}
                        <a href="{{ path('tag_show', { slug: tag.slug }) }}">{{ tag.name }}</a>{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </p>
            {% endif %}

            {# ≈örednia ocena #}
            {% set sum, cnt = 0, 0 %}
            {% for c in recipe.comments %}
                {% if c.rating is not null %}
                    {% set sum = sum + c.rating %}
                    {% set cnt = cnt + 1 %}
                {% endif %}
            {% endfor %}
            {% set avg = cnt > 0 ? (sum / cnt) : 0 %}

            <p class="text-muted">
                ≈örednia ocena:
                {% for i in 1..5 %}
                    {% if i <= avg|round(0, 'floor') %}‚òÖ{% else %}‚òÜ{% endif %}
                {% endfor %}
                {% if cnt > 0 %} ({{ avg|number_format(2, '.', ' ') }}/5, {{ cnt }} ocen){% else %} (brak ocen){% endif %}
            </p>

            <div class="mt-3">
                {{ recipe.content|nl2br }}
            </div>

            <div class="mt-4">
                <a href="{{ path('app_recipe_index') }}" class="btn btn-sm btn-outline-secondary">‚Üê Wszystkie przepisy</a>
                {% if recipe.category %}
                    <a href="{{ path('category_show', { slug: recipe.category.slug }) }}" class="btn btn-sm btn-outline-secondary">Wr√≥ƒá do kategorii</a>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_recipe_edit', { id: recipe.id }) }}" class="btn btn-sm btn-primary">‚úèÔ∏è Edytuj</a>
                    <form method="post" action="{{ path('app_recipe_delete', { id: recipe.id }) }}" style="display:inline;" onsubmit="return confirm('Na pewno chcesz usunƒÖƒá ten przepis?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
                        <button class="btn btn-sm btn-danger">üóëÔ∏è Usu≈Ñ</button>
                    </form>
                {% endif %}
            </div>
        </article>

        <hr class="my-4">

        <h3>Komentarze</h3>
        {% if recipe.comments is empty %}
            <p class="text-muted">Brak komentarzy.</p>
        {% else %}
            <ul class="list-group mb-3">
                {% for c in recipe.comments %}
                    <li class="list-group-item">
                        <strong>{{ c.authorName }}</strong> ({{ c.authorEmail }})<br>
                        {{ c.content|nl2br }}
                        <small class="text-muted d-block">{{ c.createdAt|date('Y-m-d H:i') }}</small>

                        {% if c.rating is not null %}
                            <div>
                                {% for i in 1..5 %}
                                    {% if i <= c.rating %}‚òÖ{% else %}‚òÜ{% endif %}
                                {% endfor %}
                            </div>
                        {% endif %}

                        {% if is_granted('ROLE_ADMIN') %}
                            <form method="post" action="{{ path('app_comment_delete', { id: c.id }) }}" style="display:inline" onsubmit="return confirm('UsunƒÖƒá komentarz?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ c.id) }}">
                                <button class="btn btn-sm btn-danger mt-1">Usu≈Ñ</button>
                            </form>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

        <h4>Dodaj komentarz</h4>
        {% if app.user %}
            <a href="{{ path('app_comment_add', { id: recipe.id }) }}" class="btn btn-success">üí¨ Napisz komentarz</a>
        {% else %}
            <div class="alert alert-warning">Aby dodaƒá komentarz i ocenƒô, <a href="{{ path('app_login') }}">zaloguj siƒô</a>.</div>
        {% endif %}
    </div>
{% endblock %}
