{% extends 'base.html.twig' %}
{% block title %}{{ recipe.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <article class="recipe">
            <h1 class="mb-3">{{ recipe.title }}</h1>

            <p class="text-muted">
                <em>Kategoria:</em>
                {% if recipe.category %}
                    <a href="{{ path('category_show', { slug: recipe.category.slug }) }}">
                        {{ recipe.category.name }}
                    </a>
                {% else %}
                    —
                {% endif %}
            </p>

            <div class="mt-3">
                {{ recipe.content|nl2br }}
            </div>

            <p class="mt-4">
                <a href="{{ path('app_recipe_index') }}">← Wszystkie przepisy</a>
                {% if recipe.category %}
                    | <a href="{{ path('category_show', { slug: recipe.category.slug }) }}">Wróć do kategorii</a>
                {% endif %}
            </p>
        </article>
    </div>
{% endblock %}
