{% extends 'base.html.twig' %}
{% block title %}Najwyżej oceniane{% endblock %}

{% block body %}
    <div class="container">
        <h1>⭐ Najwyżej oceniane przepisy</h1>

        <ul class="list-group mt-3">
            {% for row in items %}
                {% set r = row.recipe %}
                {% set avg = row.avgRating is defined ? row.avgRating|float : 0 %}
                {% set cnt = row.ratingsCount is defined ? row.ratingsCount|int : 0 %}

                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <a href="{{ path('recipe_show', { id: r.id }) }}"><strong>{{ r.title }}</strong></a>
                        <div class="text-muted">
                            {% for i in 1..5 %}
                                {% if i <= avg|round(0, 'floor') %}★{% else %}☆{% endif %}
                            {% endfor %}
                            ({{ avg|number_format(2, '.', ' ') }}/5, {{ cnt }} ocen)
                        </div>
                    </div>
                    <a class="btn btn-sm btn-outline-primary" href="{{ path('recipe_show', { id: r.id }) }}">Zobacz</a>
                </li>
            {% else %}
                <li class="list-group-item text-muted">Brak ocenionych przepisów.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
