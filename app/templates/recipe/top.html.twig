{% extends 'base.html.twig' %}
{% block title %}Najwyżej oceniane{% endblock %}

{% block body %}
    <div class="container">
        <h1>⭐ Najwyżej oceniane przepisy</h1>

        <ul class="list-group mt-3">
            {% for row in items %}
                {% set r = row.recipe %}
                {# Zamieniamy ewentualne null/string na liczbę #}
                {% set avg = row.avgRating is defined and row.avgRating is not null ? (row.avgRating + 0) : 0 %}
                {% set cnt = row.ratingsCount is defined and row.ratingsCount is not null ? (row.ratingsCount + 0) : 0 %}

                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <a href="{{ path('recipe_show', { id: r.id }) }}"><strong>{{ r.title }}</strong></a>
                        <div class="text-muted">
                            {% set full = avg|round(0, 'floor') %}
                            {% for i in 1..5 %}
                                {% if i <= full %}★{% else %}☆{% endif %}
                            {% endfor %}
                            ({{ avg|number_format(2, '.', ' ') }}/5, {{ cnt }} ocen)
                        </div>
                    </div>
                    <a class="btn btn-sm btn-outline-primary" href="{{ path('recipe_show', { id: r.id }) }}">Zobacz</a>
                </li>
            {% else %}
                <li class="list-group-item text-muted">Brak ocenionych przepisów.</li>
            {% endfor %}
        </ul>

        <p class="mt-3">
            <a href="{{ path('app_recipe_index') }}" class="btn btn-outline-secondary btn-sm">← Wszystkie przepisy</a>
        </p>
    </div>
{% endblock %}
