{% extends 'base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
    <div class="container mt-5" style="max-width: 400px;">
        <h1 class="h3 mb-3">Zaloguj się</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
            <div class="mb-3">
                <label for="inputEmail">Email</label>
                <input type="email" name="email" id="inputEmail" class="form-control"
                       value="{{ last_username }}" required autofocus>
            </div>

            <div class="mb-3">
                <label for="inputPassword">Hasło</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>

            {# CSRF dla form_login #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# "Zapamiętaj mnie" (działa, jeśli w security.yaml włączone remember_me) #}
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMe">
                <label class="form-check-label" for="rememberMe">Zapamiętaj mnie</label>
            </div>

            <button class="btn btn-primary w-100" type="submit">Zaloguj</button>
        </form>
    </div>
{% endblock %}
