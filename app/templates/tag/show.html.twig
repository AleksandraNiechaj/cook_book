{% extends 'base.html.twig' %}
{% block title %}#{{ tag.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>#{{ tag.name }}</h1>
        <p class="text-muted">Slug: {{ tag.slug }}</p>

        <h3>Przepisy z tym tagiem</h3>
        <ul class="list-group">
            {% for r in items %}
                <li class="list-group-item">
                    <a href="{{ path('recipe_show', { id: r.id }) }}"><strong>{{ r.title }}</strong></a>
                </li>
            {% else %}
                <li class="list-group-item text-muted">Brak przepisów.</li>
            {% endfor %}
        </ul>

        {% if pages > 1 %}
            <nav class="mt-3">
                <ul class="pagination">
                    {% for p in 1..pages %}
                        <li class="page-item {{ p == page ? 'active' : '' }}">
                            <a class="page-link" href="{{ path('tag_show', { slug: tag.slug, page: p }) }}">{{ p }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        {% endif %}

        <p class="mt-3"><a class="btn btn-sm btn-outline-secondary" href="{{ path('tag_index') }}">← Wszystkie tagi</a></p>
    </div>
{% endblock %}
